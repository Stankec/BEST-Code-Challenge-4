<div class="fastLoginContainer">
	<%= form_tag sessions_path do %>
		<div class="form-group">
			<%= text_field_tag 	:loginUsername, params[:loginUsername], 
								:placeholder => "Username", :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= password_field_tag 	:password, nil, 
									:placeholder => "Password", :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= check_box_tag :rememberMe, 1, params[:rememberMe] %> Remember me on this machine
		</div>
		<div class="form-group">
			<%= submit_tag 'Log in',  :class => "btn btn-primary btn-block" %>
			<%= link_to 'Register', new_user_path(),  :class => "btn btn-info btn-block" %>
		</div>
	<% end %>
</div>