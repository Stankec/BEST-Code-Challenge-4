<%= form_for movie do |f| %>
	<div class="row">
		<div class="col-md-9">
			<div class="form-group">
				<label for="page_title">Title</label>
				<%= text_field_tag 	"remoteTitle", nil,
									:placeholder => "2001: A Space Odessy", 
									:class => "form-control" %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				<label for="page_title">Year</label>
				<%= text_field_tag  "remoteYear", nil,
									:placeholder => "1968", 
									:class => "form-control" %>
			</div>
		</div>
	</div>

	<div class="row" id="moviePreview" style="display:none;">
		<table class="table table-striped">
			<tbody>	
				<tr>
					<td colspan=2 id="moviePreviewPoster"></td>
				</tr>
				<tr>
					<td>Title</td>
					<td id="moviePreviewTitle"></td>
				</tr>
				<tr>
					<td>Year</td>
					<td id="moviePreviewYear"></td>
				</tr>
				<tr>
					<td>Released</td>
					<td id="moviePreviewReleased"></td>
				</tr>
				<tr>
					<td>Runtime</td>
					<td id="moviePreviewRuntime"></td>
				</tr>
				<tr>
					<td>Genre</td>
					<td id="moviePreviewGenre"></td>
				</tr>
				<tr>
					<td>Director</td>
					<td id="moviePreviewDirector"></td>
				</tr>
				<tr>
					<td>Actors</td>
					<td id="moviePreviewActors"></td>
				</tr>
				<tr>
					<td>Plot</td>
					<td id="moviePreviewPlot"></td>
				</tr>
				<tr>
					<td>Country</td>
					<td id="moviePreviewCountry"></td>
				</tr>
				<tr>
					<td>Awards</td>
					<td id="moviePreviewAwards"></td>
				</tr>
			</tbody>
		</table>
	</div>
<% end %>
